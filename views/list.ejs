<%- include("header") %>
<body>
  <div class="box" id="heading">
    <h1><%= listTitle%></h1>
  </div>

  <div class="box">
    <% Items.forEach(item =>{ %>
    <form action="/delete" method="post">
      <div class="item">
        <input
          type="checkbox"
          onchange="this.form.submit()"
          value="<%= item._id%>"
          name="checkbox"
        />
        <p><%=item.itemName%></p>
      </div>
      <input type="hidden" name="listName" value="<%=listTitle%>" />
    </form>
    <%})%>

    <form class="item" method="post" action="/">
      <label for="todo-input"></label
      ><input
        type="text"
        name="item"
        placeholder="To do item"
        id="todo-input"
      />
      <button type="submit" name="button" value="<%=listTitle%>">+</button>
    </form>
  </div>

  <%- include("footer") %>
</body>
